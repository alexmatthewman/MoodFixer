@model IEnumerable<AIRelief.Models.Question>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.maintext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.backvalue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nextvalue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer6)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer7)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer8)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maintext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image)
            </td>
