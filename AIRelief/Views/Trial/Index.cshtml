@model Question

@{
    ViewData["Title"] = "AI Relief - Free Trial Assessment";
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.2.3/howler.min.js"></script>
    <script type="text/javascript">
        // Set the current question ID for the JavaScript functions
        window.currentQuestionId = @Model.ID;
    </script>
}

<section class="trial-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="trial-header text-center mb-4">
                    <h1 class="trial-title">Free Trial Assessment</h1>
                    <p class="trial-subtitle">Test your critical thinking skills with 3 sample questions</p>
                    <div class="progress-indicator">
                        <span class="progress-text">Question <span id="current-question">1</span> of 3</span>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 33%"></div>
                        </div>
                    </div>
                </div>

                <div id="question-container" data-question-id="@Model.ID">
                    @Html.Partial("_QuestionPartial", Model)
                </div>
            </div>
        </div>
    </div>
</section>