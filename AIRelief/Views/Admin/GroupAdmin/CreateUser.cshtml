@model AIRelief.Models.User
@{
    ViewData["Title"] = "Add User";
    var group = ViewBag.Group as AIRelief.Models.Group;
}

<div class="admin-page">
    <div class="admin-header">
        <h1 class="admin-title" style="margin: 0;">Add User to @group?.Name</h1>
        <a href="/Admin/GroupAdmin/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>
    </div>

    <div class="admin-card">
        <div class="admin-card-header">
            <h5>User Details</h5>
        </div>
        <div class="admin-card-body">
            <form method="post" action="/Admin/GroupAdmin/Groups/@group?.ID/CreateUser">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="GroupId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="admin-form-group">
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="admin-form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="admin-form-group">
                            <label asp-for="AuthLevel" class="form-label">Authentication Level</label>
                            <select asp-for="AuthLevel" class="form-select" asp-items="Html.GetEnumSelectList<AIRelief.Models.AuthLevel>()"></select>
                            <span asp-validation-for="AuthLevel" class="text-danger"></span>
                        </div>
                        <div class="admin-form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                            <span class="text-danger" data-valmsg-for="password" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="admin-card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Add User
                    </button>
                    <a href="/Admin/GroupAdmin/Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}