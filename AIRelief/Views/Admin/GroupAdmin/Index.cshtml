@model IList<AIRelief.Models.User>
@{
    ViewData["Title"] = "Manage Group Users";
}

<div class="admin-page">
    <div class="admin-header">
        <h1 class="admin-title" style="margin: 0;">Group User Management</h1>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No users in your group.
        </div>
    }
    else
    {
        <div class="admin-card">
            <div class="admin-card-header">
                <h5>Users (@Model.Count)</h5>
            </div>
            <div class="admin-card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Auth Level</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong>@user.Name</strong></td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@user.AuthLevel</span>
                                    </td>
                                    <td>@user.CreatedDate.ToString("yyyy-MM-dd")</td>
                                    <td class="action-cell">
                                        <a href="/Admin/GroupAdmin/Details/@user.ID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
