@model IList<AIRelief.Models.User>
@{
    ViewData["Title"] = "Manage Group Users";
    var currentUserId = (int)(ViewBag.CurrentUserId ?? 0);
    var groupId = (int)(ViewBag.GroupId ?? 0);
}

<div class="admin-page">
<div class="admin-header">
    <h1 class="admin-title" style="margin: 0;">Group User Management</h1>
    <div class="d-flex align-items-center gap-2 flex-wrap">
        <a href="/Admin/GroupAdmin/Groups/@groupId/CreateUser" class="btn btn-primary btn-sm">
            <i class="fas fa-user-plus"></i> Add User
        </a>
        <form id="bulkUploadForm" method="post" action="/Admin/GroupAdmin/Groups/@groupId/BulkAddUsers" enctype="multipart/form-data" class="m-0">
            @Html.AntiForgeryToken()
            <input type="file" id="csvFileInput" name="csvFile" accept=".csv" style="display:none;" onchange="this.form.submit();">
            <button type="button" class="btn btn-success btn-sm" onclick="document.getElementById('csvFileInput').click();">
                <i class="fas fa-users"></i> Bulk Add Users
            </button>
        </form>
        <a href="/Admin/GroupAdmin/Groups/@groupId/BulkUsersTemplate" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-file-csv"></i> Bulk User Template
        </a>
    </div>
</div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["BulkError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["BulkError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["BulkResults"] != null)
    {
        var bulkAdded = (int)(TempData["BulkAdded"] ?? 0);
        var bulkResults = System.Text.Json.JsonSerializer.Deserialize<List<string>>(TempData["BulkResults"].ToString());
        <div class="alert @(bulkAdded > 0 ? "alert-success" : "alert-warning") alert-dismissible fade show" role="alert">
            <strong>Bulk Import:</strong> @bulkAdded user(s) added.
            <ul class="mb-0 mt-1">
                @foreach (var msg in bulkResults)
                {
                    <li>@msg</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No users in your group.
        </div>
    }
    else
    {
        <div class="admin-card">
            <div class="admin-card-header">
                <h5>Users (@Model.Count)</h5>
            </div>
            <div class="admin-card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Auth Level</th>
                                <th>Created</th>
                                <th>Last Question Attempt</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong>@user.Name</strong></td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@user.AuthLevel</span>
                                    </td>
                                    <td>@user.CreatedDate.ToString("yyyy-MM-dd")</td>
                                    <td>@(user.DatetimeOfLastQuestionAttempt.HasValue ? user.DatetimeOfLastQuestionAttempt.Value.ToString("dd MMM yyyy HH:mm") : "Never")</td>
                                    <td class="action-cell">
                                        <a href="/Admin/GroupAdmin/Details/@user.ID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        @if (user.ID == currentUserId)
                                        {
                                            <span class="badge bg-secondary">Current User</span>
                                        }
                                        else
                                        {
                                            <form method="post" action="/Admin/GroupAdmin/Users/Remove/@user.ID" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Are you sure you want to remove @Html.Raw(user.Name.Replace("'", "\\'"))?');">
                                                    <i class="fas fa-user-minus"></i> Remove
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
