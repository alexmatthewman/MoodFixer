@model IList<AIRelief.Models.Group>
@{
    ViewData["Title"] = "Manage Groups";
}

<div class="admin-page">
    <div class="admin-header">
        <h1 class="admin-title" style="margin: 0;">Group Management</h1>
        <a href="/Admin/SystemAdmin/Groups/Create" class="btn btn-primary" onclick="window.location.href='/Admin/SystemAdmin/Groups/Create'; return false;">
            <i class="fas fa-plus"></i> Create New Group
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No groups found. <a href="/Admin/SystemAdmin/Groups/Create" onclick="window.location.href='/Admin/SystemAdmin/Groups/Create'; return false;">Create your first group</a>
        </div>
    }
    else
    {
        <div class="admin-card">
            <div class="admin-card-header">
                <h5>All Groups (@Model.Count)</h5>
            </div>
            <div class="admin-card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Plan</th>
                                <th>Licenses</th>
                                <th>Expiry (Days)</th>
                                <th>Query Frequency</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model)
                            {
                                <tr>
                                    <td><strong>@group.Name</strong></td>
                                    <td>@group.PlanName</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@group.NumberOfUserLicenses</span>
                                    </td>
                                    <td>@group.ExpiryDays</td>
                                    <td>@group.QueryFrequency</td>
                                    <td class="action-cell">
                                        <a href="/Admin/SystemAdmin/Groups/Edit/@group.ID" class="btn btn-sm btn-warning" onclick="window.location.href='/Admin/SystemAdmin/Groups/Edit/@group.ID'; return false;">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/Admin/SystemAdmin/Groups/Details/@group.ID" class="btn btn-sm btn-info" onclick="window.location.href='/Admin/SystemAdmin/Groups/Details/@group.ID'; return false;">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="/Admin/SystemAdmin/Groups/Delete/@group.ID" class="btn btn-sm btn-danger" onclick="window.location.href='/Admin/SystemAdmin/Groups/Delete/@group.ID'; return false;">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
