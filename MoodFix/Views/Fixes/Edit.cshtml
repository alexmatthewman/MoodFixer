@model MoodFix.Models.FixViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="heading-text">
    <h2>Edit</h2>

    <h4>Fix</h4>

    <hr />
</div>
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="ordering" class="control-label"></label>
                    <input asp-for="ordering" class="form-control" />
                    <span asp-validation-for="ordering" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="heading" class="control-label"></label>
                    @Html.TextAreaFor(m => m.heading, new { @class = "form-control" })
                    @*<input asp-for="heading" class="form-control" />*@
                    <span asp-validation-for="heading" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="maintext" class="control-label"></label>
                    @Html.TextAreaFor(m => m.maintext, new { @class = "form-control" })
                    @*<input asp-for="maintext" class="form-control" />*@
                    <span asp-validation-for="maintext" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="image" class="control-label"></label>
                    @Html.EditorFor(x => x.image)
                    <span asp-validation-for="image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="backvalue" class="control-label"></label>
                    <input asp-for="backvalue" class="form-control" />
                    <span asp-validation-for="backvalue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nextvalue" class="control-label"></label>
                    <input asp-for="nextvalue" class="form-control" />
                    <span asp-validation-for="nextvalue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
